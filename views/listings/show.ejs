<% layout("/layouts/boilerplate") %>

<div class="container my-4">
  <!-- Back Button -->
  <div class="mb-3">
    <a href="/listings" class="btn btn-outline-dark">
      <i class="fa-solid fa-arrow-left"></i> Back
    </a>
  </div>

  <!-- Listing Title -->
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <h3 class="text-center text-md-start"><%= list.title %></h3>
    </div>
  </div>

  <!-- Listing Card -->
  <div class="row justify-content-center my-3">
    <div class="col-12 col-md-10 col-lg-8">
      <div>
        <img
          src="<%= list.image.url %>"
          class="card-img-top img-fluid"
          style="max-height: 25rem; object-fit: cover; border-top-left-radius: 1rem;border-top-right-radius: 1rem; border-bottom-left-radius: 1rem; border-bottom-right-radius: 1rem;"
        />
        <div class="card-body mt-4">
          <p class="card-text"><i><b><%=list.owner.username%></b></i></p>
          <p><%= list.description %></p>
          <p><b>&#8377; <%= list.price.toLocaleString("en-IN") %></b></p>
          <p><%= list.country %></p>
          <p><%= list.location %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Edit / Delete Buttons -->
  <% if(currUser && list.owner._id.equals(currUser._id)){ %>
  <div class="row justify-content-center my-3">
    <div class="col-12 col-md-10 col-lg-8 d-flex flex-column flex-sm-row gap-2">
      <a href="/listings/<%= list._id %>/edit" class="btn btn-primary flex-fill">
        Edit
      </a>
      <form action="/listings/<%=list._id%>?_method=DELETE" method="post" class="flex-fill">
        <button class="btn btn-danger w-100">Delete</button>
      </form>
    </div>
  </div>
  <% } %>

  <!-- Reviews Form -->
  <div class="row justify-content-center my-4">
    <div class="col-12 col-md-10 col-lg-8">
      <hr />
      <% if(currUser){ %>
      <h4>Leave a Review</h4>
      <form
        action="/listings/<%=list._id%>/reviews"
        method="post"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-4">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" required rows="4" class="form-control"></textarea>
          <div class="invalid-feedback">Please add some comments for Review ...</div>
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
      </form>
      <hr />
      <% } %>
    </div>
  </div>

  <!-- Reviews List -->
  <div class="row justify-content-center my-4">
    <div class="col-12 col-md-10 col-lg-8">
      <p><b>Reviews</b></p>
      <div class="row">
        <% if(list.reviews.length === 0){ %>
          <p>No Reviews yet :)</p>
        <% } else { %>
          <% list.reviews.forEach((review) => { %>
            <div class="col-12 col-sm-6 mb-3">
              <div class="card h-100 border">
                <div class="card-header">
                  @<%= review.author.username %> | <%= review.createdAt.toLocaleDateString() %>
                </div>
                <div class="card-body text-primary px-3 py-2">
                  <p class="starability-result" data-rating="<%= review.rating %>"></p>
                  <p class="card-text"><%= review.comment %></p>
                  <hr />
                  <form
                    action="/listings/<%=list._id%>/reviews/<%=review._id%>?_method=DELETE"
                    method="post"
                  >
                    <button class="btn btn-danger btn-sm">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Map Section -->
  <div class="row justify-content-center my-4">
    <div class="col-12 col-md-10 col-lg-8">
      <h3>Where you'll be</h3>
      <div id="map" style="height: 400px; width: 100%;"></div>
    </div>
  </div>
</div>


<script>
  const lat = parseFloat("<%= list.coordinates.lat %>");
  const lng = parseFloat("<%= list.coordinates.lng %>");

  const map = L.map("map").setView([lat, lng], 13);

  L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    attribution: "&copy; OpenStreetMap contributors",
  }).addTo(map);

  L.marker([lat, lng])
    .addTo(map)
    .bindPopup("<b><%= list.title %></b><br><%= list.location %>")
    .openPopup();
</script>
