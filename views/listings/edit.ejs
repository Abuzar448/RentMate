<% layout("/layouts/boilerplate") %>

<div class="container my-4">

  <div class="mb-3">
    <a href="/listings/<%=list._id%>" class="btn btn-outline-dark">
      <i class="fa-solid fa-arrow-left"></i> Back
    </a>
  </div>

  <div class="row justify-content-center">
    <!-- Mobile = full (col-12), Tablet = 10 column, Laptop = 8 column, Large screen = 6 column -->
    <div class="col-12 col-md-10 col-lg-8 col-xl-6">
      <h3 class="text-center mb-4">Edit your Listing</h3>

      <form
        method="post"
        action="/listings/<%=list._id%>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <!-- Title -->
        <div class="mb-4">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="list[title]"
            value="<%=list.title%>"
            required
            class="form-control"
          />
          <div class="valid-feedback">Title is done!</div>
          <div class="invalid-feedback">Please enter the title</div>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="list[description]"
            required
            class="form-control"
            rows="4"
          ><%=list.description%></textarea>
          <div class="valid-feedback">Description is done!</div>
          <div class="invalid-feedback">Please enter the description</div>
        </div>

        <!-- Old Image + Upload -->
        <div class="mb-4 text-center">
          <p class="mb-2 fw-bold">Old Image :</p>
          <img
            src="<%=originalImage%>"
            class="img-fluid rounded mb-3"
            style="max-width: 100%; height: auto"
          />
          <input name="list[image][url]" type="file" class="form-control" />
        </div>

        <!-- Price & Country -->
        <div class="row">
          <div class="mb-4 col-12 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              name="list[price]"
              value="<%=list.price%>"
              required
              class="form-control"
            />
            <div class="valid-feedback">Price is saved</div>
            <div class="invalid-feedback">Please enter the valid price!</div>
          </div>

          <div class="mb-4 col-12 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="list[country]"
              value="<%=list.country%>"
              required
              class="form-control"
            />
            <div class="valid-feedback">Country is saved!</div>
            <div class="invalid-feedback">Please enter the name of Country</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-4">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="list[location]"
            value="<%=list.location%>"
            required
            class="form-control"
          />
          <div class="valid-feedback">Location is saved!</div>
          <div class="invalid-feedback">Please enter your location</div>
        </div>

        <!-- Button -->
        <div class="text-center">
          <button type="submit" class="btn editbtn px-4 py-2">Edit</button>
        </div>
      </form>
    </div>
  </div>
</div>

